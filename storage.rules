rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // ペット画像のセキュリティルール
    match /pet-images/{petId}/{imageId} {
      // 認証済みかつ指定メールアドレスのユーザーのみアクセス可能
      allow read, write: if request.auth != null 
                      && request.auth.token.email == "duffy.chocolate.aya@gmail.com";
                      
      // 画像ファイルのみ許可（商業利用安全性確保）
      allow write: if request.resource.contentType.matches('image/.*') 
                   && request.resource.size <= 5 * 1024 * 1024; // 5MB制限
    }
    
    // その他のファイルは全て拒否
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}